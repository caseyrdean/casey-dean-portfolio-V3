# AWS Deployment Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Database
# =============================================================================
# MySQL/Aurora connection string
DATABASE_URL=mysql://user:password@your-rds-endpoint:3306/casey_portfolio

# =============================================================================
# REQUIRED: Authentication
# =============================================================================
# Secret for signing JWT session tokens (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here

# Admin password for login (can be plain text or bcrypt hash)
ADMIN_PASSWORD=your-admin-password

# Owner name displayed in the UI
OWNER_NAME=Casey Dean

# =============================================================================
# REQUIRED: S3 Storage
# =============================================================================
# S3 bucket name for file uploads (AWS_ prefix not allowed in Amplify)
S3_BUCKET_NAME=your-s3-bucket-name

# S3 bucket region (AWS_ prefix not allowed in Amplify)
S3_REGION=us-east-1

# Note: AWS credentials are NOT needed when using IAM roles in Amplify/EC2/ECS/Lambda
# The AWS SDK will automatically use the attached IAM role for S3 access

# =============================================================================
# REQUIRED: OpenAI (for The Oracle)
# =============================================================================
# OpenAI API key for The Oracle RAG feature
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# OPTIONAL: Server Configuration
# =============================================================================
# Port to run the server on (default: 3000)
PORT=3000

# Node environment
NODE_ENV=production
